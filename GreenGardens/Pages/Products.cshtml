@page
@model GreenGardens.Pages.ProductsModel
@{
    ViewData["Title"] = "Products";

}
@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))//Only will run if user is admin.
{
    <a asp-page="Create" class="btn btn-primary"> Add Item</a>
}
@if (User.Identity.IsAuthenticated)
{
    <form method="get" asp-page="/Logout">
        <button type="submit" class="btn btn-warning">Logout</button>
    </form>
}

<h2>Products</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Description</th>
            <th>Stock Quantity</th>
            <th>Expected Stock</th>
            <th>Image</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Products)//layout the table of products
        {
            if (@product.Stock_Quantity < @product.Expected_Stock)
            {
                <tr>
                    <td>@product.Name</td> 
                    <td>@product.Price</td> 
                    <td>@product.Description</td>
                    <td style="color: red; font-size: large; font-weight: bolder">@product.Stock_Quantity</td>
                    <td>@product.Expected_Stock</td>
                    <td>
                        <img src="@product.ImagePath" alt="Product Image" style="width:100px">
                    </td>
                    <td>
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))//Only will run if user is admin.
                        {
                            <a asp-page="/Edit" asp-route-Productid="@product.Productid" class="btn btn-primary">Edit</a>
                            <a asp-page="/Delete" asp-route-Productid="@product.Productid" class="btn btn-primary">Delete</a>


                        }
                    </td>
                </tr>
            }
        }



    </tbody>
</table>

