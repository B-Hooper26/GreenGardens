@page
@model GreenGardens.Pages.ProductsModel
@{
    ViewData["Title"] = "Products";

}
@if (User.Identity.IsAuthenticated)
{
    <a asp-page="Create" class="btn btn-primary"> Add Item</a>
}
@if (User.Identity.IsAuthenticated)
{
    <form method="get" asp-page="/Logout">
        <button type="submit" class="btn btn-warning">Logout</button>
    </form>
}

<h2>Products</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Description</th>
            <th>Stock Quantity</th>
            <th>Expected Stock</th>
            <th>Image</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>@product.Name</td> 
                <td>@product.Price</td> 
                <td>@product.Description</td>
                <td>@product.Stock_Quantity</td>
                <td>@product.Expected_Stock</td>
                <td>
                    <img src="@product.ImagePath" alt="Product Image" style="width:100px">
                </td>
                <td>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a asp-page="/Edit" asp-route-Productid="@product.Productid" class="btn btn-primary">Edit</a>
                        <a asp-page="/Delete" asp-route-Productid="@product.Productid" class="btn btn-danger">Delete</a>
                    }
                </td>
            </tr>
        }



    </tbody>
</table>

