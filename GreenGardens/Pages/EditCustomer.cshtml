@page "{Customerid:Guid}"
@model GreenGardens.Pages.CustomerEditModel

<h1>Edit Customer</h1>

<form method="post">
    <input type="hidden" asp-for="Customer.Customerid" />
    <!-- First Name -->
    <div class="form-group row">
        <div class="col-4">
            <label>First Name:</label>
        </div>
        <div class="col-8">
            <input type="text" asp-for="Customer.f_name" />
        </div>
    </div>

    <!-- Second Name -->
    <div class="form-group row">
        <div class="col-4">
            <label>Second Name: </label>
        </div>
        <div class="col-8">
            <input type="text" asp-for="Customer.s_name" class="form-control" />
        </div>
    </div>
    <!-- Email-->
    <div class="form-group row">
        <div class="col-4">
            <label>Email: </label>
        </div>
        <div class="col-8">
            <input type="text" asp-for="Customer.email" class="form-control" />
        </div>
    </div>
    <!-- Loyalty Points-->
    <div class="form-group row">
        <div class="col-4">
            <label>Loyalty Points: </label>
        </div>
        <div class="col-8">
            <input type="text" asp-for="Customer.loyalty_points" class="form-control" />
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
