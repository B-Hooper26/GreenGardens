@page
@model GreenGardens.Pages.LoginModel
@{
}
<h1>Login</h1>

<div class="container border p-5">
    <form method="post">
        <!-- Email Field -->
        <div class="form-group">
            <label>Email:</label>
            <input asp-for="Email" class="form-control" />
        </div>

        <!-- Password Field -->
        <div class="form-group">
            <label>Password:</label>
            <input asp-for="Password" type="password" class="form-control" />
        </div>

        <!-- Submit Button -->
        <div class="form-group">
            <button type="submit" style="border-radius: 12px; background-color: lightgray; border: solid; color: black;"  class="btn btn-primary">Login</button>
        </div>
    </form>
</div>